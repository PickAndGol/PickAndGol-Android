<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_pubs_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.keepcoding.pickandgol.activity.PubEventsActivity">

    <!-- Toolbar for the actvity -->
    <include layout="@layout/toolbar_main"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- This layout will be replaced by a fragment during runtime -->
        <LinearLayout
            android:id="@+id/activity_pub_events_fragment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/activity_pub_events_button_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="45dp"
            android:src="@drawable/ic_plus"/>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>