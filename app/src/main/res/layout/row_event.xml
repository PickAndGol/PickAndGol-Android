<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="120dp">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        tools:src="@drawable/default_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/event_image"
        android:layout_toRightOf="@+id/event_image"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="19sp"
            android:gravity="center_vertical|center_horizontal"
            tools:text="Ejemplo de nombre de evento un poco largo"/>

        <TextView
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="14sp"
            android:gravity="center_vertical|center_horizontal"
            tools:text="Sat Nov 04 18:38:00 GMT+01:00 2017"/>

    </LinearLayout>

</RelativeLayout>