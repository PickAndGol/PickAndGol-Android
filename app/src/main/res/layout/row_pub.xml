<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="120dp">

    <ImageView
        android:id="@+id/pub_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        tools:src="@drawable/default_placeholder"/>

    <TextView
        android:id="@+id/pub_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/pub_image"
        android:layout_toRightOf="@+id/pub_image"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="19sp"
        android:gravity="center_vertical|center_horizontal"
        tools:text="Ejemplo de nombre de pub un poco largo"/>

</RelativeLayout>